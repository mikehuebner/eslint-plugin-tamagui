{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "rootDir": "./src"
  },
  "include": ["src"]
}
